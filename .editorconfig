# EditorConfig: https://editorconfig.org
# 2026 Best Practices for TypeScript + React Design System

root = true

# 기본 설정 (모든 파일)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# TypeScript/JavaScript
[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_style = tab
indent_size = 2
max_line_length = 100

# JSON (package.json, tsconfig.json 등)
[*.json]
indent_style = space
indent_size = 2

# YAML (GitHub Actions, pnpm-workspace)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_style = tab
indent_size = 2
max_line_length = 120

# Markdown (문서)
[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off

# Storybook 설정
[.storybook/**/*.{ts,tsx}]
indent_style = tab
indent_size = 2

# 설정 파일
[{.prettierrc,.eslintrc,.babelrc}]
indent_style = space
indent_size = 2

# Makefile
[{Makefile,*.mk}]
indent_style = tab

# Shell scripts
[*.sh]
indent_style = tab
indent_size = 2
end_of_line = lf

# 빌드 설정
[{tsup.config.*,vitest.config.*,vite.config.*}]
indent_style = tab
indent_size = 2
